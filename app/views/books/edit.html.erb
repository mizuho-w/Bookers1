<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
 <% end %>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <p>error!</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>


 <p> <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></p>


