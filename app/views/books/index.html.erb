<% if flash[:notice] %>
 <div class="flash"><%= flash[:notice] %></div>
 <% end %>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	  <% @books.each do |f| %>
		<tr>
			<td><%= f.title %></td>
			<td><%= f.body %></td>
			<td><%= link_to 'Show', book_path(f), method: :get  %></td>
			<td><%= link_to 'Edit', edit_book_path(f) %></td>
			<td><%= link_to 'Destroy', book_path(f), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
	   <% end %>
	</tbody>
</table>


<h1>New book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    <p>error</p>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <p><%= f.submit "Create Book" %></p>
<% end %>


